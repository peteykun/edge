<p class="or center"><i>&#8212; or &#8212;</i></p>

<div class="clearfix"></div>

<%= form_for @accommodation_request do |f| %>
  <%= f.label('name', "File a request for accomodation:") %>

  <% if @accommodation_request.errors.any? %>
  <ul class="error_messages">
    <% for msg in @accommodation_request.errors.full_messages %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% elsif @success %>
  <div class="success">
    Your request has been recorded!
  </div>
  <% end %>

  <%= f.text_field  :name,    placeholder: "Your name"            %>
  <%= f.text_field  :phone,   placeholder: "Your phone number"    %>
  <%= f.text_field  :college, placeholder: "Your institution"     %><br><br>

  I need accomodation from <%= f.date_field :from, class: 'date' %> to: <%= f.date_field :to, class: 'date' %>.<br><br>

  <%= recaptcha_tags ajax: true unless current_user %>

  <%= f.submit "Submit" %>
<% end %>
