{
  "categories": [
  <% @all_categories.each do |category| %>
  {
    "id": <%= category.id %>,
    "name": "<%= category.name %>",
    "black_icon_url": "<%= category.black_icon.url %>",
    "white_icon_url": "<%= category.white_icon.url %>",
    "events": [
      <% category.events.each do |event| %>
      {
        "id": <%= event.id %>,
        "name": "<%= event.name %>",
        "short_description": "<%= event.short_description %>",
        "description": "<%= @markdown.render(event.description) %>",
        "image_url": "<%= event.image.url %>",
        "contacts": [
          <% for contact in [event.contact1, event.contact2, event.contact3] %>
          <% if contact %>
          {
            "name": "<%= contact.name %>",
            "phone": "<%= contact.phone %>",
            "facebook": "<%= contact.facebook_username %>"
          },
          <% end %>
          <% end %>
        ],
        "rounds": [
          {
            "name": "Prelims",
            "from": "2014-03-08T11:09:18.359Z",
            "to": "2014-03-08T11:09:18.359Z"
          },
          {
            "name": "Finals",
            "from": "2014-03-08T11:09:18.359Z",
            "to": "2014-03-08T11:09:18.359Z"
          },
        ]
      },
      <% end %>
    ]
  },
  <% end %>
  ]
}