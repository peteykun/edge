<div class="event top clearfix">

	<h1 class="left" style="margin-top: 0;"><%= @event.name %></h1>
	
  <%= image_tag @event.category.black_icon, class: 'class_icon' %>
	
	<div style="clear: both;"></div>
	
	<%= image_tag @event.image.url(:flagship), class: 'flagship' %>

  <% if @event.sponsor %>
    <div class="event_sponsor clearfix">
      <div class="event_sponsor_logo">
        <%= link_to(@event.sponsor.url) { image_tag @event.sponsor.logo(:small), style: "height: 50px;" } if @event.sponsor %>
      </div>

      <p>
        <%= @event.name %> is brought to you by the kind folk over at <b><%= @event.sponsor.name %></b>.<br>
        For more information on <b><%= @event.sponsor.name %></b>, visit <%= link_to 'their website', @event.sponsor.url %>.
      </p>
    </div>
  <% end %>

	<% if false %>
	<div class="prizes clearfix">
		<div class="prize">
			<div class="prize_decr">First Place</div>
			&#8377; 7000
		</div>
		
		<div class="prize">
			<div class="prize_decr">Second Place</div>
			&#8377; 5000
		</div>
		
		<div class="prize">
			<div class="prize_decr">Third Place</div>
			&#8377; 3000
		</div>
	</div>
	<% end %>
					
	<div class="info">
		<h2>Event Information</h2>
		
		<%= raw @markdown.render(@event.description) %>
	</div>
	
	<div class="contacts">
		<% for contact in [@event.contact1, @event.contact2] %>
		<% if contact %>
		<a href="<%= contact.facebook_url %>" target="_blank">
			<div class="contact">
				<%= image_tag contact.facebook_avatar %>
				
				<div class="contact_info">
					<div class="name"><%= contact.name %></div>
					<div class="phone"><%= contact.phone %></div>
					<div class="fb"><%= contact.facebook_username %></div>
				</div>
			</div>
		</a>
		<% end %>
		<% end %>
	</div>
</div>